
module libft: ../libft

	public include ./

	put LINK_FLAGS -Llibft -lft

	disable auto

	put LINK_DEPENDS libft/libft.a
	put LIBS_RULES libft

	makefile import ../srcs/libft.mk # TODO: move

#

module anim: anim

	public include include/

	public require libft

	put LINK_FLAGS -lm

module camera: camera

	public include include/

	public require math_utils

	put LINK_FLAGS -lm

module events: events

	public include include/

	public require gl
	public require libft

	private require utils

module math_utils: math_utils

	public include include/

	put LINK_FLAGS -lm

module obj: obj

	public include include/

	public require math_utils
	public require transform
	public require mesh
	public require anim
	public require camera

module obj_anim: obj_anim

	public include include/

	public require obj
	public require math_utils
	public require anim

module renderer: renderer

	public include include/public/
	private include include/

	public require obj
	private require camera
	private require math_utils
	private require shader
	private require texture
	private require mesh
	private require mtl
	private require shader_loader
	private require utils
	private require gl

module transform: transform

	public include include/

	public require math_utils

module utils: utils

	public include include/

	public require libft

module shader: shader

	public include .

	public require libft

module shader_loader: shader_loader

	public include include/public
	private include include

	public require libft
	public require shader
	private require gl
	private require utils

module mesh: mesh

	public include .

	public require libft
	public require mtl

module mesh_loader: mesh_loader

	public include include/public
	private include include

	public require libft
	public require mesh
	private require mtl_loader
	private require gl
	private require math_utils
	private require utils

module mtl: mtl
	
	public include .

	public require texture
	public require math_utils

module mtl_loader: mtl_loader

	public include include/public
	private include include/

	public require libft
	private require mtl
	private require texture_loader
	private require utils

module texture: texture

	public include .

	public require libft

module texture_loader: texture_loader

	public include include/public
	private include include/

	public require libft
	public require texture
	private require utils
	private require gl

#

main module main: main

	private include include/

	local MDR += lol

	# private require libft
	# private require gl
	private require renderer
	private require camera
	private require obj
	private require events
	private require utils
	private require shader
	private require mesh
	private require mesh_loader
	# private require mtl_loader # useless
	# private require shader_loader # useless
	private require obj_anim

	put LINK_FLAGS -lm
